{
	"name": "jp-toolkit",
	"version": "1.1.2",
	"description": "An extensible object-oriented tools for WordPress that helps you to develop themes and plugins.",
	"scripts": {
		"watch": "webpack --watch --progress --mode=development",
		"compile": "webpack --mode=production",
		"compile:dev": "webpack --mode=development",

		"dist": "composer install --no-dev --optimize-autoloader && rm -rf ./dist && wp-scripts build && rm -f ../jp-toolkit.zip && wp dist-archive . ../jp-toolkit.zip",
		"build": "composer install --no-dev --optimize-autoloader && wp-scripts build",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses --prod --gpl3",
		"clean": "rm -rf dist"
	},
	"author": "Javier Prieto",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/jprieton/jp-toolkit"
	},
	"devDependencies": {
		"@wordpress/scripts": "^25.1.0",
		"copy-webpack-plugin": "^11.0.0",
		"dir-archiver": "^2.1.0",
		"postcss-preset-env": "^7.8.3",
		"rtlcss": "^4.0.0",
		"sass-loader": "^13.2.0",
		"sass-mq": "^6.0.0"
	},
	"rtlcssConfig": {
		"options": {
			"autoRename": false,
			"autoRenameStrict": false,
			"blacklist": {},
			"clean": true,
			"greedy": false,
			"processUrls": false,
			"stringMap": []
		},
		"plugins": [],
		"map": false
	}
}
